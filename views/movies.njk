{% extends "layout.njk" %}

{% block content %}
<main class="container">
    <ul class="movie-list">
        {% for movie in movies %}
        <li class="card">
            <h1><a href="/movies/{{ movie.id }}">{{ movie.title }}</a></h1>          
            <p>{{ movie.director }}</p>
            <p>{{ movie.year }}</p>
        </li>
    </ul>
        



    {% endfor %}
</main>
{% endblock %}